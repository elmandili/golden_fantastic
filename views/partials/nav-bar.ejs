    text-decoration: none;
    cursor: pointer;
    transition: background-color 0.3s ease, color 0.3s ease;
  }

  /* Change the link color to #111 (black) on hover */
  a:hover {
    background-color: #111111;
    transition: background-color 0.3s ease, color 0.3s ease;
  }

  #loop_text {
    position: absolute;
    left: 100%;
    top: 50%;
    transform: translateY(-50%);
    white-space: nowrap;
    animation: text_animation 30s linear infinite;
  }

  @keyframes text_animation {
    0% {
      left: -100%;
    }

    100% {
      left: 100%;
    }
  }



  @keyframes fadeIn {
    from {
      opacity: 0;
    }

    to {
      opacity: 1;
    }
  }







  #loader_container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background-color: #2b2e31;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 9999;
  }

  /* HTML: <div class="loader"></div> */
  .loader {
    width: 50px;
    aspect-ratio: 1;
    color: #fff;
    border: 2px solid;
    box-sizing: border-box;
    --c: radial-gradient(farthest-side, #0000 calc(100% - 3px), currentColor calc(100% - 2px) 98%, #0000);
    background: var(--c), var(--c);
    background-size: 23px 23px;
    background-position: 0 0, 12px 12px;
    animation: l4 1s infinite;
  }

  @keyframes l4 {
    100% {
      background-position: -23px 0px, 12px 35px
    }
  }
</style>

<script>

  const loader = document.getElementById("loader_container");
  const start = Date.now();

  window.addEventListener("load", function () {
    const duration = Date.now() - start;
    const delay = Math.max(0, 1000 - duration); // ensure at least 1s

    setTimeout(() => {
      loader.style.display = "none";
    }, delay);
  });
</script>